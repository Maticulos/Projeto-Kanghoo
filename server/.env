# ===========================================
# CONFIGURAÇÕES DO BANCO DE DADOS - PRODUÇÃO
# ===========================================
DATABASE_URL=postgresql://transporte_user:SENHA_FORTE_AQUI@localhost:5432/transporte_escolar_prod
DB_HOST=localhost
DB_PORT=5432
DB_NAME=transporte_escolar_prod
DB_USER=transporte_user
DB_PASSWORD=SENHA_FORTE_AQUI

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA - PRODUÇÃO
# ===========================================
JWT_SECRET=CHAVE_JWT_SUPER_SECRETA_256_BITS_AQUI_PRODUÇÃO_2024
JWT_EXPIRES_IN=8h

# ===========================================
# CONFIGURAÇÕES DE EMAIL - PRODUÇÃO
# ===========================================
EMAIL_USER=seu_email@dominio.com
EMAIL_PASS=senha_app_email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# ===========================================
# CONFIGURAÇÕES WHATSAPP/TWILIO - PRODUÇÃO
# ===========================================
TWILIO_ACCOUNT_SID=sua_account_sid_twilio
TWILIO_AUTH_TOKEN=seu_auth_token_twilio
TWILIO_WHATSAPP_NUMBER=+5511999999999

# ===========================================
# CONFIGURAÇÕES DO SERVIDOR - PRODUÇÃO
# ===========================================
PORT=3000
NODE_ENV=production

# ===========================================
# CONFIGURAÇÕES DE UPLOAD - PRODUÇÃO
# ===========================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ===========================================
# CONFIGURAÇÕES DE WEBSOCKET - PRODUÇÃO
# ===========================================
WS_PORT=3001
WS_HEARTBEAT_INTERVAL=30000

# ===========================================
# CONFIGURAÇÕES DE CACHE - PRODUÇÃO
# ===========================================
CACHE_TTL=600000
CACHE_CLEANUP_INTERVAL=1800000

# ===========================================
# CONFIGURAÇÕES DE RATE LIMITING - PRODUÇÃO
# ===========================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=50

# ===========================================
# CONFIGURAÇÕES DE LOGS - PRODUÇÃO
# ===========================================
LOG_LEVEL=warn
LOG_FILE=./logs/app.log
LOG_FORMAT=JSON
LOG_TIMESTAMP=true

# ===========================================
# CONFIGURAÇÕES DO GOOGLE MAPS - PRODUÇÃO
# ===========================================
GOOGLE_MAPS_API_KEY=SUA_CHAVE_GOOGLE_MAPS_API_AQUI
GOOGLE_MAPS_REGION=BR
GOOGLE_MAPS_LANGUAGE=pt-BR

# ===========================================
# CONFIGURAÇÕES ADICIONAIS DE PRODUÇÃO
# ===========================================
CORS_ORIGIN=https://seudominio.com
SSL_CERT_PATH=/etc/ssl/certs/seudominio.crt
SSL_KEY_PATH=/etc/ssl/private/seudominio.key
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30